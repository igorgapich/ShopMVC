@using BusinessLogic.DTOs;
@model CreateProductDto;

<div class="container">
    <div class="row">
        <h2>Edit New Product</h2>
    </div>
    <form asp-controller="Product" asp-action="Edit" method="post" class="row g-3" enctype="multipart/form-data">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" type="text" class="form-control">
        </div>
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control">
        </div>
        <div class="col-md-6">
            <label asp-for="Image" class="form-label">Image Path</label>
            <input asp-for="Image" type="file" class="form-control">
        </div>

        <div class="col-md-6">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.ListCategory" class="form-select">
            </select>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>