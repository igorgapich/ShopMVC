@using DataAccess.Entities;﻿
@model Product

@{
    string productImagePlaceholder = @"https://t3.ftcdn.net/jpg/04/34/72/82/360_F_434728286_OWQQvAFoXZLdGHlObozsolNeuSxhpr84.jpg";
}

<div class="container">
    <div class="card">
        <h5 class="card-header">Info Product</h5>
        @* <div class="product-card-img"> *@
        <div id="carousel-@Model.Id" class="carousel carousel-dark slide" data-bs-ride="carousel" data-bs-interval="false">

            <div class="carousel-inner">
                <div class="carousel-item active product-card-img" data-bs-interval="10000">
                    <img src="@(Model.ImagePath??productImagePlaceholder)" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item product-card-img" data-bs-interval="2000">
                    <img src="https://images.unsplash.com/photo-1626218174358-7769486c4b79?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8Z2FtaW5nJTIwcGN8ZW58MHx8MHx8fDA%3D" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item product-card-img">
                    <img src="https://media.cnn.com/api/v1/images/stellar/prod/210104111236-beginner-gaming-pc.jpg?q=w_2065,h_1162,x_0,y_0,c_fill" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@Model.Id" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel-@Model.Id" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        @* <img src="@(Model.ImagePath??productImagePlaceholder)" class="card-img-top" alt="...">
        </div> *@
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">Category:<em><strong> @Model.Category?.Name</strong></em></p>
            <p class="fw-bold">Price <span class="badge bg-primary">@Model.Price</span></p>
            @*href="~\Product\Index"*@
            @if (ViewBag.ReturnUrl == null)
            {
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Go to Back</a>
            }
            else
            {
                <a href="@ViewBag.ReturnUrl" class="btn btn-primary">Go to Back</a>
            }           
            <a asp-controller="Product" asp-action="Delete" asp-route-id=@Model.Id class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
